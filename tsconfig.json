{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/components/HeroSection.tsx", "src/app/components/EmailSection.tsx", "src/app/components/Footer.tsx", "src/app/components/AboutSection.tsx", "src/app/components/AchievementsSection.tsx", "src/app/components/Navbar.tsx", "src/app/components/NavLink.tsx", "src/app/components/TabButton.tsx", "src/app/components/ProjectTag.tsx", "src/app/components/MenuOverlay.tsx", "src/app/components/ProjectsSection.tsx", "src/app/components/ProjectCard.tsx"],
  "exclude": ["node_modules"]
}
